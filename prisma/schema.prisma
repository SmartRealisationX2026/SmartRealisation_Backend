// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum UserRole {
  PATIENT
  PHARMACIST
  ADMIN
}

enum AlertStatus {
  PENDING
  SENT
}

enum Language {
  FR
  EN
}

// Models
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Will be hashed
  role      UserRole
  name      String
  phone     String?
  location  Json?    // {latitude: number, longitude: number}
  language  Language @default(FR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  ownedPharmacies Pharmacy[] @relation("Owner")
  searches        Search[]
  alerts          Alert[]
  auditLogs       AuditLog[]

  // Index pour colonnes fréquemment recherchées
  @@index([email])
  @@index([role])
  @@map("users")
}

model Pharmacy {
  id           String   @id @default(uuid())
  name         String
  address      String
  city         String
  neighborhood String?
  latitude     Decimal  @db.Decimal(10, 8)
  longitude    Decimal  @db.Decimal(11, 8)
  phone        String?
  is24_7       Boolean  @default(false) @map("is_24_7")
  ownerId      String   @unique @map("owner_id") // 1:1 relationship enforced
  isApproved   Boolean  @default(false) @map("is_approved")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  owner   User     @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  stocks  Stock[]
  alerts  Alert[]

  // Index pour colonnes fréquemment recherchées
  @@index([latitude, longitude])
  @@index([city, neighborhood])
  @@map("pharmacies")
}

model Medication {
  id        String   @id @default(uuid())
  name      String
  dci       String?  // Dénomination Commune Internationale
  form      String?  // Comprimé, sirop, injection, etc.
  dosage    String?  // 500mg, 10ml, etc.
  category  String?  // Antibiotique, Antalgique, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  stocks   Stock[]
  searches Search[]
  alerts   Alert[]

  // Index pour colonnes fréquemment recherchées
  @@index([name])
  @@index([category])
  @@map("medications")
}

model Stock {
  id            String   @id @default(uuid())
  pharmacyId    String   @map("pharmacy_id")
  medicationId  String   @map("medication_id")
  quantity      Int      @default(0)
  priceFcfa     Decimal  @default(0) @db.Decimal(10, 2) @map("price_fcfa")
  lastUpdated   DateTime @default(now()) @map("last_updated")
  isOutOfStock  Boolean  @default(false) @map("is_out_of_stock")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  pharmacy   Pharmacy   @relation(fields: [pharmacyId], references: [id], onDelete: Cascade)
  medication Medication @relation(fields: [medicationId], references: [id], onDelete: Cascade)

  // Constraints
  @@unique([pharmacyId, medicationId])

  // Index pour colonnes fréquemment recherchées
  @@index([quantity])
  @@index([priceFcfa])
  @@map("stocks")
}

model Search {
  id            String   @id @default(uuid())
  userId        String?  @map("user_id") // Nullable for anonymous searches
  medicationId  String   @map("medication_id")
  latitude      Decimal  @db.Decimal(10, 8) // RESTORED: for spatial analytics (heatmaps)
  longitude     Decimal  @db.Decimal(11, 8) // RESTORED: for spatial analytics (heatmaps)
  resultsCount  Int      @default(0) @map("results_count")
  createdAt     DateTime @default(now())

  // Relations
  user       User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  medication Medication  @relation(fields: [medicationId], references: [id], onDelete: Cascade)

  // Index pour analytics géographiques
  @@index([latitude, longitude])
  @@map("searches")
}

model Alert {
  id           String      @id @default(uuid())
  userId       String?     @map("user_id") // Nullable for anonymous alerts
  medicationId String      @map("medication_id")
  pharmacyId   String?     @map("pharmacy_id") // Nullable for global alerts
  contactInfo  String      @map("contact_info") // email or phone
  status       AlertStatus @default(PENDING)
  createdAt    DateTime    @default(now())
  sentAt       DateTime?   @map("sent_at")

  // Relations
  user       User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  medication Medication @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  pharmacy   Pharmacy?  @relation(fields: [pharmacyId], references: [id], onDelete: SetNull)

  @@map("alerts")
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  action    String   // CREATE, UPDATE, DELETE, LOGIN, etc.
  details   Json?    // Additional context
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}
